#version 330 core

uniform vec4 base_color;
uniform sampler2D tex0;

in vec2 v_uv;
in vec3 v_normal;
in vec3 v_color;
out vec4 color;


void main() {
    vec4 final_color;
    if(base_color == vec4(0.0))
    {
        final_color = vec4(v_color, 1.0);
    }
    else
    {
        final_color = base_color;
    }
     
    color = final_color;
}